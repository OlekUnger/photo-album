	if title!='Search'
		.container
			.content_wrap
				h2.main_title #{main_title}

				.main_content
					if title =='Album'
						+button('btn btn--slidered add-btn','Добавить','assets/img/sprite.svg#add')
					
					- for(var i=0; i<10; i++)

						if title == "main"
							article.item.item--main
