mixin actionBtns_list
	if title != 'Search'
		ul.actionBtns_list
			if title == 'main'
				li.actionBtns_item
					+button("btn btn--slidered edit-btn","Редактировать","assets/img/sprite.svg#edit")
				li.actionBtns_item
					+button("btn btn--slidered","Выйти","assets/img/sprite.svg#off")
			if title == 'User'
				li.actionBtns_item
					+link("btn btn--slidered","На главную", "main.html","assets/img/sprite.svg#home")
			if title == 'Album'
				li.actionBtns_item
					+link("btn btn--slidered","На главную", "main.html","assets/img/sprite.svg#home")
				li.actionBtns_item
					+button("btn btn--slidered edit-btn","Редактировать","assets/img/sprite.svg#edit")

if title =='Search'
	.header--search
		.container
			h2.main_title #{main_title}
		.header_bottom
			.container
				.header_bottom--search
					
					.fixedItem
						.infoBlock--min
							a(href="album.html").user_pic
								img(src="assets/img/user-pic1.jpg")
							.infoBlock_content
								h4 Имя Фамилия

					.fixedItem
						form.search-form
							.form_item
								input(name="search" type="text" placeholder="Исследовать мир" id="search")
								label(for="search")
									svg.form_icon
										use(xlink:href="assets/img/sprite.svg#loupe")
					.fixedItem
						+button('search-new','Показать новые','')

if title!='Search'
	header.header#header
		
		//- main-page, user-page
		if title == 'main' || title == 'User'
			.container
				.header_content
					+actionBtns_list

					.infoBlock
						.user_pic
							img(src="assets/img/user-pic1.jpg")
						.infoBlock_content
							h3 Имя Фамилия
							.about
								p
									| Lorem ipsum dolor sit amet, consectetur adipisicing elit.

							.socials
								+socials

			.header_bottom
				.container
					form.search-form
						.form_item
							input(name="search" type="text" placeholder="Исследовать мир" id="search")
							label(for="search")
								svg.form_icon
									use(xlink:href="assets/img/sprite.svg#loupe")


		//- Album-page

		if title == 'Album'
			.container
				.header_content--album
					+actionBtns_list

					.infoBlock--min
						.user_pic
							img(src="assets/img/user-pic1.jpg")
						.infoBlock_content
							h4 Имя Фамилия

					.description
						h3.description_title Заголовок альбома
