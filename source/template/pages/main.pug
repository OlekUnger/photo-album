extends ../_template

block title
  title Главная страница

block variables
  -var title='main'

block content
  .wrapper
    include ../blocks/header
    
    main.main.main--main
      .main_content.container
        - for(var i=0; i<10; i++)
          article.item.item--main
            .item_photo
              +link('item_overlay','','#','assets/img/sprite.svg#loupe')
              img
                
            .item_header.container
              .infoBlock--min
                .user_pic
                  img
              .infoBlock_content 
                span.photo_title Название фотографии

                -var panel_list=[{'text': 'Комментариев','count': '0','icon':'assets/img/sprite.svg#comments'},{'text': 'Лайков', 'count': '0','icon':'assets/img/sprite.svg#like'}]
                .panel
                  ul.panel_list
                    each item in panel_list
                      li.panel_item
                        +button('panel_link',item.count, item.icon)
                  
            .item_footer.container
              +link('btn item_title','Заголовок альбома','album.html','assets/img/sprite.svg#album')



    include ../blocks/footer


    